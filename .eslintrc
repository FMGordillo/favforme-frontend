{
  "extends": [
    "plugin:@next/next/recommended",
    "plugin:prettier/recommended",
    "plugin:react-hooks/recommended"
  ],
  "settings": {
    "react": {
      "version": "detected"
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaFunction": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "sort-imports": "warn"
  },
  "globals": { "React": "writable" }
}
