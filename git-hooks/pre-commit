#!/bin/sh

RED="\033[1;31m"
BROWN="\033[1;33m"
GREEN="\033[1;32m"
NC="\033[0m"

linter_exit_code=1
tsc_exit_code=1
staged_ts_files=$(git diff --cached --diff-filter=d --name-only | grep -E "(.ts$|.tsx$)")

if [ -n $staged_ts_files ]; then
  echo "${BROWN} ü•∫ No .ts | .tsx files, skipping checks${NC}"
  exit 0
fi

echo "${BROWN} üëÄ Checking ESLint...${NC}"

./node_modules/.bin/eslint $staged_ts_files --quiet --fix
linter_exit_code=$?

if [ $linter_exit_code -ne 0 ]
  then
    echo "${RED} ‚ùå ESLint${NC}"
    exit 1
  else
    echo "${GREEN} ‚úî ESLint${NC}"
fi

echo "${BROWN} üëÄ Checking Typescript...${NC}"

./node_modules/.bin/tsc || exit 0
tsc_exit_code=$?

if [ $tsc_exit_code -ne 0 ]
  then
    echo "${RED} ‚ùå Typescript${NC}"
    exit 1
  else
    echo "${GREEN} ‚úî Typescript${NC}"
fi

# if [ $linter_exit_code -eq 0 ] && [ $tsc_exit_code -eq 0 ]; then
if [ $linter_exit_code -eq 0 ]; then
  # git add .
  echo "${GREEN} ‚úî Files added to staging!${NC}"
  exit 0
else
  exit 1
fi
